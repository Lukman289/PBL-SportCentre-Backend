# Database Configuration
DATABASE_URL=mysql://user:password@localhost:3306/sport_center

# Server Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=gantidengansekretyangpanjangdanaman

# Payment Gateway Configuration (Midtrans)
MIDTRANS_CLIENT_KEY=SB-Mid-client-yourkey
MIDTRANS_SERVER_KEY=SB-Mid-server-yourkey

# URL Configuration
API_URL=https://api.sportcenter.id
API_URL_DEV=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Cookie Configuration
COOKIE_SECRET=gantidengansekretyangpanjangdanaman
# Masa aktif cookie dalam milidetik (1 hari = 86400000)
COOKIE_MAX_AGE=86400000
# Domain untuk cookie (kosongkan untuk menggunakan domain saat ini)
COOKIE_DOMAIN=localhost
# Atur ke true di production untuk mengharuskan HTTPS
# COOKIE_SECURE=true
# Atur ke strict, lax, atau none (jika secure true)
# COOKIE_SAME_SITE=lax

# Cache Configuration
CACHE_TTL=300

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=300

# Cloudinary Configuration
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_CLOUD_NAME=your_cloud_name

# PASETO Keys (Generate dengan library paseto)
PASETO_LOCAL_KEY=k4.local.yourkey
PASETO_SECRET_KEY=k4.secret.yourkey
PASETO_PUBLIC_KEY=k4.public.yourkey 