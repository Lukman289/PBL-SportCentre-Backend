{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/app.ts",
    "build": "tsc",
    "build:prod": "npm run build && node scripts/minify.js",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "lint": "eslint . --ext .ts --fix",
    "lint:prod": "cross-env NODE_ENV=production eslint . --ext .ts --fix",
    "lint:fix": "cross-env ESLINT_FIX_ALL=true eslint . --ext .ts --fix --quiet",
    "start:prod": "cross-env NODE_ENV=production npx ts-node ecosystem.config.ts && pm2 start ecosystem.config.ts --node-args='--expose-gc'",
    "stop:prod": "pm2 stop ecosystem.config.ts",
    "restart:prod": "pm2 restart ecosystem.config.ts",
    "monitor:prod": "pm2 monit",
    "check:unused-exports": "ts-unused-exports ./scripts/ts-unused-exports.config.js",
    "check:structure": "madge --circular --orphans --extensions ts src",
    "check:deps": "depcheck --config ./scripts/depcheck.config.js",
    "clean:code": "npm run check:unused-exports && npm run lint && npm run check:structure && npm run check:deps",
    "seed:faker": "ts-node prisma/factories/index.ts"
  },
  "postinstall": "prisma generate",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "PBL",
    "Reservasi",
    "Sport Center",
    "Backend",
    "Node.js",
    "TypeScript",
    "Express",
    "Prisma",
    "Midtrans"
  ],
  "author": "Reynald Silva",
  "description": "Backend untuk sistem reservasi Sport Center. Dibangun dengan Node.js, TypeScript, Express, dan Prisma. Mendukung autentikasi JWT, penyimpanan media dengan Cloudinary, pembayaran menggunakan Midtrans, serta caching dengan Redis. Dilengkapi dengan validasi data menggunakan Zod dan pengelolaan konfigurasi dengan dotenv.",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "argon2": "^0.41.1",
    "bull": "^4.16.5",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "midtrans-client": "^1.4.2",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0",
    "redis": "^4.6.13",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@faker-js/faker": "^9.7.0",
    "@types/bull": "^4.10.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/helmet": "^4.0.0",
    "@types/node": "^22.13.11",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^9.23.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jiti": "^2.4.2",
    "madge": "^8.0.0",
    "prettier": "^3.5.3",
    "terser": "^5.33.0",
    "ts-unused-exports": "^11.0.1"
  },
  "overrides": {
    "axios": "^1.8.2"
  }
}
