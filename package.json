{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/app.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node dist/app.js",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "lint": "eslint . --ext .ts --fix",
    "lint:prod": "cross-env NODE_ENV=production eslint . --ext .ts --fix",
    "start:prod": "cross-env NODE_ENV=production npx ts-node ecosystem.config.ts && pm2 start ecosystem.config.ts --node-args='--expose-gc'",
    "stop:prod": "pm2 stop ecosystem.config.ts",
    "restart:prod": "pm2 restart ecosystem.config.ts",
    "monitor:prod": "pm2 monit"
  },
  "postinstall": "prisma generate",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "PBL",
    "Reservasi",
    "Sport Center",
    "Backend",
    "Node.js",
    "TypeScript",
    "Express",
    "Prisma",
    "Midtrans"
  ],
  "author": "Reynald Silva",
  "description": "Backend untuk sistem reservasi Sport Center. Dibangun dengan Node.js, TypeScript, Express, dan Prisma. Mendukung autentikasi JWT, penyimpanan media dengan Cloudinary, pembayaran menggunakan Midtrans, serta caching dengan Redis. Dilengkapi dengan validasi data menggunakan Zod dan pengelolaan konfigurasi dengan dotenv.",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/qs": "^6.9.18",
    "argon2": "^0.41.1",
    "base64-url": "^2.3.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^4.1.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "midtrans-client": "^1.4.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0",
    "redis": "^4.6.13",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "uid-safe": "^2.1.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-plugin-no-comments": "^1.1.10",
    "jiti": "^2.4.2",
    "prettier": "^3.5.3"
  },
  "overrides": {
    "axios": "^1.8.2"
  }
}
