{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "rimraf dist && tsc",
    "build:prod": "npm run build && node scripts/minify.js",
    "start": "node dist/app.js",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "lint": "tsc --noEmit && eslint . --ext .ts",
    "lint:prod": "cross-env NODE_ENV=production eslint . --ext .ts --fix",
    "lint:fix": "cross-env ESLINT_FIX_ALL=true eslint . --ext .ts --fix --quiet",
    "start:prod": "cross-env NODE_ENV=production npx ts-node ecosystem.config.ts && pm2 start ecosystem.config.ts --node-args='--expose-gc'",
    "stop:prod": "pm2 stop ecosystem.config.ts",
    "restart:prod": "pm2 restart ecosystem.config.ts",
    "monitor:prod": "pm2 monit",
    "check:unused-exports": "ts-unused-exports ./scripts/ts-unused-exports.config.js",
    "check:structure": "madge --circular --orphans --extensions ts src",
    "check:deps": "depcheck --config ./scripts/depcheck.config.js",
    "clean:code": "npm run check:unused-exports && npm run lint && npm run check:structure && npm run check:deps",
    "test": "cross-env NODE_ENV=development jest --config tests/jest.config.ts",
    "test:watch": "cross-env NODE_ENV=development jest --config tests/jest.config.ts --watch",
    "test:coverage": "cross-env NODE_ENV=development jest --config tests/jest.config.ts --coverage",
    "test:unit": "cross-env NODE_ENV=development jest --config tests/jest.config.ts \"tests/unit/.*\\.test\\.ts$\"",
    "test:integration": "cross-env NODE_ENV=development jest --config tests/jest.config.ts \"tests/integration/.*\\.test\\.ts$\"",
    "test:e2e": "cross-env NODE_ENV=development jest --config tests/jest.config.ts \"tests/e2e/.*\\.test\\.ts$\"",
    "test:quiet": "cross-env NODE_ENV=development jest --silent",
    "prisma": "prisma",
    "prisma:seed": "cross-env NODE_ENV=development node --max-old-space-size=4096 -r ts-node/register prisma/factories/index.ts",
    "prisma:migration": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "PBL",
    "Reservasi",
    "Sport Center",
    "Backend",
    "Node.js",
    "TypeScript",
    "Express",
    "Prisma",
    "Midtrans"
  ],
  "author": "Reynald Silva",
  "description": "Backend untuk sistem reservasi Sport Center. Dibangun dengan Node.js, TypeScript, Express, dan Prisma. Mendukung autentikasi JWT, penyimpanan media dengan Cloudinary, pembayaran menggunakan Midtrans, serta caching dengan Redis. Dilengkapi dengan validasi data menggunakan Zod dan pengelolaan konfigurasi dengan dotenv.",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "argon2": "^0.41.1",
    "bull": "^4.16.5",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "midtrans-client": "^1.4.2",
    "multer": "^1.4.5-lts.2",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0",
    "redis": "^4.6.13",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@faker-js/faker": "^9.7.0",
    "@types/bull": "^4.10.0",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.1",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^9.23.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "jest-matcher-utils": "^30.0.0-beta.3",
    "jest-mock-extended": "^4.0.0-beta1",
    "jiti": "^2.4.2",
    "madge": "^8.0.0",
    "prettier": "^3.5.3",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.1",
    "terser": "^5.33.0",
    "ts-jest": "^29.3.4",
    "ts-unused-exports": "^11.0.1"
  },
  "overrides": {
    "axios": "^1.8.2"
  }
}
